@model Covid19Manager.UI.ViewModels.CreatePatientVM

@{
    ViewData["Title"] = "CreatePatient";
}

<h1>Dodaj pacijenta</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePatient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OIB" class="control-label"></label>
                <input asp-for="OIB" class="form-control" />
                <span asp-validation-for="OIB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsolationAddress" class="control-label"></label>
                <input asp-for="IsolationAddress" class="form-control" />
                <span asp-validation-for="IsolationAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsolationLat" class="control-label"></label>
                <input asp-for="IsolationLat" class="form-control" />
                <span asp-validation-for="IsolationLat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsolationLong" class="control-label"></label>
                <input asp-for="IsolationLong" class="form-control" />
                <span asp-validation-for="IsolationLong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-action="Index">Natrag</a>
                @if (!Model.idIsSet)
                {
                    <input type="submit" value="Dodaj" class="btn btn-success" />
                }
            </div>
        </form>
    </div>
    @if (Model.idIsSet)
    {
        <div class="col-md-4" style="text-align: center; border-left: 1px solid #c2c2c2">
            <h1>Pacijentov id:</h1>
            <h3>@Html.Raw(Model.ID)</h3>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
